pipeline {
    agent any
    options {
        timeout(time: 1, unit: 'HOURS')
    }
    stages {
        stage('Clone') {
            steps {
                checkout scm
            }
        }

        stage('Run') {
            steps {
            sh '''#!/bin/bash
            docker run --rm -it \
            -v $(pwd):/src \
            -p 1313:1313 \
            klakegg/hugo:0.101.0 \
            server
'''
            }
        }

    post {
        unsuccessful {
            script {
                throw err
                currentBuild.result = 'FAILED'
                return
            }
        }
    }
}
}
